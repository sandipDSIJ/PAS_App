<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/active_background"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/default_gap"
        android:paddingBottom="@dimen/default_gap"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/default_gap"
            android:weightSum="5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/font_feed_header_older"
                android:layout_weight="1"
                android:textSize="@dimen/font_holding_items"
                android:fontFamily="@font/lato_regular"
                android:layout_marginRight="@dimen/default_margin"
                android:text="Log Date" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:textColor="@color/font_feed_header_older"
                android:textSize="@dimen/font_holding_items"
                android:fontFamily="@font/lato_regular"
                android:layout_marginRight="@dimen/default_margin"
                android:text="Comments" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLogDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/font_feed_header_older"
                android:textSize="@dimen/font_holding_items"
                android:fontFamily="@font/lato_bold"
                android:layout_marginRight="@dimen/default_gap"
                tools:text="-" />
            <TextView
                android:id="@+id/tvComments"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@color/font_feed_header_older"
                android:textSize="@dimen/font_holding_items_bold"
                android:fontFamily="@font/lato_regular"
                android:layout_marginRight="@dimen/margin_10"
                tools:text="-" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/inactive_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_gap"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/button_gap"
            android:textColor="@color/font_company_name"
            android:drawableRight="@drawable/ic_info"
            android:drawablePadding="@dimen/default_gap"
            android:textSize="@dimen/button_primary"
            android:fontFamily="@font/lato_bold"
            android:layout_marginRight="@dimen/default_margin"
            android:text="Reason"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/inactive_background" />
    <LinearLayout
        android:id="@+id/llActivityLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="@dimen/margin_16"
        android:background="@drawable/rounded_corner_activity_logs"
        android:layout_marginBottom="@dimen/default_gap"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvReason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="@dimen/button_gap"
            android:textColor="@color/whitish"
            android:textSize="@dimen/font_holding_items_bold"
            android:fontFamily="@font/lato_bold"
            android:layout_marginRight="@dimen/default_margin"
            android:text="Reason"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/inactive_background" />
</LinearLayout>