<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/active_background"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/default_gap"
        android:paddingBottom="@dimen/default_gap"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCompanyName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:textColor="@color/font_company_name"
                android:textSize="@dimen/font_holding_items_bold"
                android:fontFamily="@font/lato_bold"
                android:layout_marginRight="@dimen/default_margin"
                tools:text="HDFC Bank" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/default_gap"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtQuantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/font_feed_header_older"
                android:textSize="@dimen/font_holding_items"
                android:fontFamily="@font/lato_regular"
                android:layout_marginRight="@dimen/default_margin"
                android:text="Quantity" />
            <TextView
                android:id="@+id/txtStartPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/font_feed_header_older"
                android:textSize="@dimen/font_holding_items"
                android:fontFamily="@font/lato_regular"
                android:layout_marginRight="@dimen/default_margin"
                android:text="Start Price" />


            <TextView
                android:id="@+id/txtamt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/font_feed_header_older"
                android:textSize="@dimen/font_holding_items"
                android:fontFamily="@font/lato_regular"
                android:text="Amt Inv" />
            <TextView
                android:id="@+id/txtWeightage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/font_feed_header_older"
                android:textSize="@dimen/font_holding_items"
                android:fontFamily="@font/lato_regular"
                android:text="% WT" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/font_feed_header_older"
                android:textSize="@dimen/font_holding_items_bold"
                android:fontFamily="@font/lato_bold"
                android:layout_marginRight="@dimen/default_margin"
                tools:text="150" />
            <TextView
                android:id="@+id/tvSPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/font_feed_header_older"
                android:textSize="@dimen/font_holding_items_bold"
                android:fontFamily="@font/lato_bold"
                android:layout_marginRight="@dimen/default_margin"
                tools:text="0" />

            <TextView
                android:id="@+id/tvAmtInv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/font_feed_header_older"
                android:textSize="@dimen/font_holding_items_bold"
                android:fontFamily="@font/lato_bold"
                tools:text="-" />
            <TextView
                android:id="@+id/tvWt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/font_feed_header_older"
                android:textSize="@dimen/font_holding_items_bold"
                android:fontFamily="@font/lato_bold"
                tools:text="-" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/inactive_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="@dimen/button_gap"
            android:textColor="@color/font_company_name"
            android:drawableRight="@drawable/ic_info"
            android:drawablePadding="@dimen/default_gap"
            android:textSize="@dimen/button_primary"
            android:fontFamily="@font/lato_bold"
            android:layout_marginRight="@dimen/default_margin"
            android:text="More"/>
        <TextView
            android:id="@+id/tvIndustry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/font_company_name"
            android:textSize="@dimen/font_holding_items_bold"
            android:fontFamily="@font/lato_bold"
            android:layout_marginRight="@dimen/default_margin"
            android:text="Industry" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/inactive_background" />
    <LinearLayout
        android:id="@+id/llActivityLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/default_gap"
        android:orientation="vertical">

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/inactive_background" />
</LinearLayout>